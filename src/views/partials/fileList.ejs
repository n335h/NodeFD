<h2 class="text-xl font-semibold mb-2">Your Files</h2>
<div id="fileList" class="border border-gray-300 rounded p-2">
    <% if (files.length === 0) { %>
        <p>No files uploaded yet.</p>
    <% } else { %>
        <ul>
            <% files.forEach(file => { %>
                <li>
                    <span><%= file.fileName %></span>
                    <a href="/download/<%= file._id %>" download="<%= file.fileName %>">
                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">
                            Download
                        </button>
                    </a>
                </li>
            <% }); %>
        </ul>
    <% } %>
</div>
