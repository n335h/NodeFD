


<div class="flex flex-col items-center w-full  h-full bg-gray-100" id="userContent">
<div class="dashboard flex-col w-full">
    <h1 class="text-3xl m-6  justify-left font-bold text-left mb-4">Hey, <%= user.first_name %>!</h1>
    <div >

        <div class="flex w-full flex-row">
            <!-- User Profile Section -->
            <div class="bg-white w-1/6 shadow-lg rounded-lg p-6 m-6">
          
                <h2 class="text-xl font-semibold mb-4">Your Profile</h2>
                <!-- <div class="mb-4">
                    <img src="<%= user.avatar %>" alt="User Avatar" class="w-32 h-32 mx-auto mb-4">
                </div> -->

                <div class="mb-4">
                    <strong>First Name:</strong>
                    <p id="firstName"><%= user.first_name %></p>
                </div>
                <div class="mb-4">
                    <strong>Last Name:</strong>
                    <p id="lastName"><%= user.last_name %></p>
                </div>
                <div class="mb-4">
                    <strong>Email:</strong>
                    <p id="userEmail"><%= user.email %></p>
                </div>
        
                <button onclick="location.href='/update-profile'" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Edit Profile
                </button>
            </div>

            <!-- File Transfer/Browser Section -->
          <!-- File Transfer/Browser Section -->
          <div class="bg-white shadow-lg w-5/6 rounded-lg p-6 m-6">
            <div class="mb-6">
                <h2 class="text-xl font-semibold mb-2">Upload File</h2>
                <form id="fileUploadForm" enctype="multipart/form-data" action="/upload" method="POST">
                    <input type="file" id="fileInput" name="file" class="border border-gray-300 rounded p-2 w-full mb-4" />
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Upload
                    </button>
                </form>
            </div>
        
            <div>
                <%- include('../partials/fileList', { files: files }) %>
            </div>
        </div>
        
                </div>
            </div>
        </div>
 
</div>