<div class="flex flex-col  items-center justify-center h-full bg-gray-100" id="userContent">
  <h2 class="text-2xl">Register</h2>
  <form data-testid="registerForm" id="registerForm" class="w-1/5 bg-white p-8 rounded-md shadow-md mt-4 flex flex-col items-center" action="/register" method="post">
      <div class="flex flex-col items-start mt-4">
          <label for="firstName">First Name:</label>
          <input title="firstName" type="text" name="firstName" required >
      </div>

      <div class="flex flex-col items-start mt-4">
        <label for="lastName">Last Name:</label>
          <input title="lastName" type="text" name="lastName" required >
      </div>

      <div class="flex flex-col items-start mt-4">
        <label for="email">Email:</label>
          <input title="email" type="email" name="email" required >
      </div>

      <div class="flex flex-col items-start mt-4">
        <label for="password">Password:</label>
          <input title="password" type="password" name="password" required >
      </div>

      <div class="flex flex-col items-start mt-4">
        <label for="confirmPassword">Confirm Password:</label>
          <input title="confirmPassword" type="password" name="confirmPassword" required >
      </div>

      <div class="flex flex-col items-start mt-4">
        <label for="registrationToken">Registration Token:</label>
          <input title="registrationToken" type="text" name="registrationToken" required >
      </div>

      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold mt-4 py-2 px-4 rounded" type="submit">Register</button>
  </form>
 </div>