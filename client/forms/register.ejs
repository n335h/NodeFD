<div class="flex flex-col items-center justify-center h-full bg-gray-100" id="userContent">
  <h2 class="text-2xl">Register</h2>
  <form data-testid="registerForm" id="registerForm" class="w-1/5 bg-white p-8 rounded-md shadow-md mt-4 flex flex-col items-center" action="/register" method="post" autocomplete="off">
    <div class="flex flex-col items-start mt-4">
      <label for="first_name">First Name:</label>
      <input id="first_name" title="first_name" type="text" name="first_name" required>
    </div>

    <div class="flex flex-col items-start mt-4">
      <label for="last_name">Last Name:</label>
      <input id="last_name" title="last_name" type="text" name="last_name" required>
    </div>

    <div class="flex flex-col items-start mt-4">
      <label for="email">Email:</label>
      <input id="email" title="email" type="email" name="email" required>
    </div>

    <div class="flex flex-col items-start mt-4">
      <label for="password">Password:</label>
      <input id="password" title="password" type="password" name="password" required>
    </div>

    <div class="flex flex-col items-start mt-4">
      <label for="confirmPassword">Confirm Password:</label>
      <input id="confirmPassword" title="confirmPassword" type="password" name="confirmPassword" required>
    </div>

    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold mt-4 py-2 px-4 rounded" type="submit">Register</button>
  </form>
</div>
