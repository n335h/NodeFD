


<div class="flex flex-col items-center justify-center h-full bg-gray-100" id="userContent">
    
    <div class="bg-white shadow-lg rounded-lg p-6 m-6 w-full max-w-6xl">
        <h1 class="text-2xl font-bold text-center mb-4">Dashboard</h1>
        <p class="text-center mb-6">Welcome to your file transfer dashboard!</p>

        <div class="flex flex-row">
            <!-- User Profile Section -->
            <div class="w-1/3 bg-white p-6 border-r">
          
                <h2 class="text-xl font-semibold mb-4">Your Profile</h2>
                <!-- <div class="mb-4">
                    <img src="<%= user.avatar %>" alt="User Avatar" class="w-32 h-32 mx-auto mb-4">
                </div> -->

                <div class="mb-4">
                    <strong>First Name:</strong>
                    <p id="firstName"><%= user.first_name %></p>
                </div>
                <div class="mb-4">
                    <strong>Last Name:</strong>
                    <p id="lastName"><%= user.last_name %></p>
                </div>
                <div class="mb-4">
                    <strong>Email:</strong>
                    <p id="userEmail"><%= user.email %></p>
                </div>
        
                <button onclick="location.href='/update-profile'" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Edit Profile
                </button>
            </div>

            <!-- File Transfer/Browser Section -->
            <div class="w-2/3 p-6">
                <div class="mb-6">
                    <h2 class="text-xl font-semibold mb-2">Upload File</h2>
                    <form id="fileUploadForm">
                        <input type="file" id="fileInput" class="border border-gray-300 rounded p-2 w-full mb-4" />
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Upload
                        </button>
                    </form>
                </div>
    
                <div>
                    <h2 class="text-xl font-semibold mb-2">Your Files</h2>
                    <div id="fileList" class="border border-gray-300 rounded p-2">
                        <p>No files uploaded yet.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>